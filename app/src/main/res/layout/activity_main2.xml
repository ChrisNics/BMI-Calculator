<?xml version="1.0" encoding="utf-8"?>
     <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_signup"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/roboto_slab"
        android:lineHeight="1.2dp"
        android:text="Create Account"
        android:textColor="#020501"
        android:textSize="19.47dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="236dp"
        android:backgroundTint="#fcf7f7"
        android:maxLength="8"
        android:ems="10"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingBottom="30dp"
        android:textColor="@color/white"
        android:textColorHint="#dbdbdb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="332dp"
        android:backgroundTint="#fcf7f7"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="30dp"
        android:textColor="@color/white"
        android:textColorHint="#dbdbdb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="432dp"
        android:backgroundTint="#fcf7f7"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingBottom="30dp"
        android:textColor="@color/white"
        android:textColorHint="#dbdbdb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignup"
        android:layout_width="268dp"
        android:layout_height="58dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="528dp"
        android:backgroundTint="#fcf7f7"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="SIGN-UP"
        android:textColor="#6a8afb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:text="Already have an account?"
        android:textColor="#dbdbdb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignup" />

    <TextView
        android:id="@+id/tvSignin"
        android:layout_width="71dp"
        android:layout_height="27dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="60dp"
        android:text="@string/hyperlinkSignin"
        android:textColorLink="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignup" />

</androidx.constraintlayout.widget.ConstraintLayout>